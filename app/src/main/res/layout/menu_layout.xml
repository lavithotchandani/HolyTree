<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:id="@+id/card_item"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:background="@color/white"
        app:cardElevation="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="3dp"
                android:text="Order1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_light"
                android:textStyle="bold"
                android:layout_marginTop="5dp"

                />

            <ImageView
                android:id="@+id/img_food"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@mipmap/main"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:id="@+id/food_dtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:text="Cheese Lasagne with mango shake"
                android:layout_marginBottom="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 150"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_light"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginRight="150dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/txt_prc"
                    />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/orange"
                    android:foreground="@drawable/add"
                    app:backgroundTint="#FFFFFF"
                    android:id="@+id/cart_add"
                    android:elevation="10dp"
                    />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/edt_qnt"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_light"
                    android:backgroundTint="@color/black"
                    android:text="0"
                    android:textSize="20dp"
                    android:layout_gravity="bottom"
                    />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/orange"
                    android:foreground="@drawable/ic_baseline_horizontal_rule_24"
                    app:backgroundTint="#FFFFFF"
                    android:layout_marginRight="8dp"
                    android:id="@+id/cart_remove"
                    android:elevation="10dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>