<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".ProfileUpdate"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="600dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box"/>
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/circle_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/username"
            android:layout_width="90dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/profile_pic"
            android:layout_marginLeft="30dp"
            android:background="@drawable/curve"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/upd_name"
            android:fontFamily="@font/poppins"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/username"
            android:layout_toRightOf="@+id/username"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:hint="Username"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/up_email"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/username"
            android:layout_marginLeft="30dp"
            android:background="@drawable/curve"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/upd_email"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/up_email"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_toRightOf="@+id/up_email"
            android:fontFamily="@font/poppins"
            android:gravity="center_horizontal"
            android:hint="E-mail"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/mob_no"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="MOBILE NO."
            android:fontFamily="@font/poppins"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/up_email"
            android:layout_marginLeft="30dp"
            android:background="@drawable/curve"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"/>
        <EditText
            android:id="@+id/upd_mob_no"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mob_no"
            android:layout_toRightOf="@+id/mob_no"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:inputType="phone"
            android:textSize="15sp"
            android:hint="Mobile no"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/new_add"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ADDRESS."
            android:fontFamily="@font/poppins"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/mob_no"
            android:layout_marginLeft="30dp"
            android:background="@drawable/curve"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"/>
        <EditText
            android:id="@+id/edt_new_add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/new_add"
            android:layout_toRightOf="@+id/new_add"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="UPDATE"
            android:id="@+id/up_bt"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins"
            android:backgroundTint="@color/white"
            />


    </RelativeLayout>

</LinearLayout>